  class Game {
    -Player[2] players
    -Board board
    +start()
    +movePiece()
    +isGameOver()
  }
  class Player {
    -String name
    -String color
    +makeMove()
  }
  class Board {
    -Piece[9][10] grid
    +getPieceAt()
    +setPieceAt()
    +isLegalMove()
  }
  class Piece {
    -String color
    -Position position
    +isLegalMove()
  }
